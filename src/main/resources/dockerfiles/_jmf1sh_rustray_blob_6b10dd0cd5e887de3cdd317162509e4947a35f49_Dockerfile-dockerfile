FROM ubuntu:yakkety

RUN apt-get update
RUN apt-get install -y cmake g++ qt5-default
RUN apt-get install -y rustc cargo
RUN apt-get install -y python3-numpy
RUN apt-get install -y python3-matplotlib

ADD . /source
WORKDIR /source
