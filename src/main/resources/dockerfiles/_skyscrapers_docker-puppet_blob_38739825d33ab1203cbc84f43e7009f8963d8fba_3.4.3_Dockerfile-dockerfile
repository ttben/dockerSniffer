FROM ubuntu:14.04

ENV PUPPET_VERSION 3.4.3-1ubuntu1.1

RUN \
  apt-get update && \
  apt-get install -y puppet=$PUPPET_VERSION && \
  apt-get install -y git && \
  apt-get clean